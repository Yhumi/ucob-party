---
import '../styles/main.css'
import { Image } from 'astro:assets';

import bg from '../assets/images/bg-5.png';
---

<!doctype html>
<html class="w-full h-dvh" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>UCoB PartyFinder</title>

		<meta content="UCoB PartyFinder" property="og:title" />
		<meta content="Curated UCoB PF listings." property="og:description" />
		<meta content="https://ucob.party/" property="og:url" />
		<meta content="#e5e5fe" data-react-helmet="true" name="theme-color" />
	</head>
	<body class="w-full min-h-screen">
		<div class="page-center full-height">
			<div class="box-left pf-tile">
				<slot />
			</div>
		</div>
	</body>
</html>